<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/normal_space"
    android:orientation="horizontal"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivCover"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_height"
        tools:src="@mipmap/ic_launcher"
        android:layout_weight="3"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvTitle"
            android:layout_marginLeft="@dimen/space_small"
            tools:text="Hello World"
            android:textSize="@dimen/large_size"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvOverView"
            android:layout_marginLeft="@dimen/space_small"
            tools:text="Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World Hello World "
            android:textSize="@dimen/size_normal"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>